<%- include('../partials/header') %>

<div class="px-4 py-6 sm:px-0">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Manage Posts</h1>
  </div>

  <div class="bg-white shadow rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Author</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% posts.forEach(function(post){ %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <a href="/posts/<%= post._id %>" class="text-blue-600 hover:text-blue-800"><%= post.title %></a>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= post.author.username %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= post.formattedDate %></td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
              <form action="/admin/posts/<%= post._id %>/delete" method="POST" onsubmit="return confirm('Delete this post and its comments?')" class="inline">
                <button type="submit" class="px-3 py-1 bg-red-600 text-white text-xs rounded hover:bg-red-700">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../partials/footer') %>


